import re
import sys
from google.cloud import automl_v1beta1
#pip install google-api-python-client==1.8.4 
#pip install google-cloud-automl
import os


# 'content' is base-64-encoded image data.
def get_prediction(content):
  os.environ["GOOGLE_APPLICATION_CREDENTIALS"] = "key.json"
  project_id = 'input project_id'
  model_id = 'input model_id'
  prediction_client = automl_v1beta1.PredictionServiceClient()

  name = 'projects/{}/locations/us-central1/models/{}'.format(project_id, model_id)
  payload = {'image': {'image_bytes': content}}
  params = {}
  request = prediction_client.predict(name=name, payload=payload, params=params)
  return request  # waits till request is returned

def get_label(path):
  if not os.path.exists('test'):
    os.mkdir('test')
  dic = {}
  with open(path, 'rb') as ff:
    content = ff.read()
    data = str(get_prediction(content))
    score = round(float(re.findall('score: (.+)',data)[0]),3)
    name = re.findall('display_name: "(.+)"',data)[0]
    dic['label'] = name
    dic['score'] = score
  return dic

